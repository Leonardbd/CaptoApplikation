<?xml version="1.0" encoding="utf-8" ?>


<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CaptoApplication.MainPage"
            BarBackgroundColor="#FF295F"
            >
    
 <ContentPage Title="Mina varor">
        <ContentPage.Content>
            <StackLayout>
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Text="LÄGG  TILL"  TextColor="White" Margin="10" BackgroundColor="Goldenrod" CornerRadius="5" x:Name="btnadd" Clicked="btnadd_Clicked"
                            Grid.Row="0"
                            Grid.Column="0"/>
                    <Button Text="SCANNA" TextColor="White" Margin="10" BackgroundColor="Green" CornerRadius="5" x:Name="btnscan" Clicked="btnscan_Clicked"
                            Grid.Row="0"
                            Grid.Column="1"/>
                    <Button Text="SÖK RECEPT" TextColor="White" Margin="10" BackgroundColor="Blue" CornerRadius="5" x:Name="btnsearch" IsVisible="True"
                            Grid.Row="0"
                            Grid.Column="2"/>

                </Grid>
                <ListView ItemsSource="{Binding IngredientList}" HasUnevenRows="True" CachingStrategy="RecycleElement" x:Name="lw" SelectionMode="None">
                
                <ListView.ItemTemplate >

                    <DataTemplate>
                            <ViewCell>
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.7*"/>
                                        <ColumnDefinition Width="0.3*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <CheckBox x:Name="checkBox"
                                              CheckedChanged="checkBox_CheckedChanged"
                                              Color="Blue"
                                              Grid.Row="0"
                                              Grid.Column="0"
                                              />

                                    <Label  Text="{Binding Name}" 
                                            TextColor="Black" 
                                            FontSize="Large"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Grid.RowSpan="1"
                                            Grid.ColumnSpan="3"
                                            Margin="0,3,0,0"/>
                                    
                                    <Label Text="{Binding Date}"
                                            TextColor="DarkOliveGreen" 
                                            FontSize="Medium"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="3"/>

                                    <ImageButton x:Name="removeitembtn" 
                                                    Source="minus.png" 
                                                    WidthRequest="48" 
                                                    HeightRequest="48" 
                                                    HorizontalOptions="EndAndExpand" 
                                                    CornerRadius="10" 
                                                    BackgroundColor="White" 
                                                    IsVisible="True" 
                                                    Clicked="removeitembtn_Clicked"
                                                    Grid.Row="0"
                                                    Grid.Column="4"/>
                                </Grid>
             
                            </ViewCell>
                        
                    </DataTemplate>
                    
                </ListView.ItemTemplate>


            </ListView>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>




    <ContentPage Title="Page 2">
        <ContentPage.Content>

            <StackLayout>
                <Image  Source="https://res.cloudinary.com/coopsverige/image/upload/w_800,h_800/v1452586498/125157.jpg" ScaleX="0.4" ScaleY="0.4"></Image>
            </StackLayout>

        </ContentPage.Content>
    </ContentPage>




    <ContentPage Title="Sök recept">
        <ContentPage.Content>
            
            <StackLayout Orientation="Vertical">

                <SearchBar x:Name="IngredientSearchBar"
                           SearchButtonPressed="IngredientSearchBar_SearchButtonPressed"
                           Placeholder="Sök recept"
                           CancelButtonColor="Blue"
                           PlaceholderColor="Gray"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
                           FontSize="Medium"
                           FontAttributes="None"/>
                <ProgressBar x:Name="progbar" Progress="0" WidthRequest="300" HeightRequest="20" VerticalOptions="Center" HorizontalOptions="Center" IsVisible="False"></ProgressBar>
                <ListView ItemsSource="{Binding RecipeList}" HasUnevenRows="True" CachingStrategy="RecycleElement" x:Name="RecipeListView" ItemTapped="RecipeListView_ItemTapped">

                    <ListView.ItemTemplate >

                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="5">
                                    <StackLayout >
                                        <Image ScaleX="1" ScaleY="0.6" Source="{Binding Image}"></Image>
                                    </StackLayout>
                                    <StackLayout>
                                        <Label Text="{Binding Title}" TextColor="#FF295F" FontSize="Large"/>
                                    <Label Text="{Binding Description}" TextColor="Black" FontSize="Medium"/>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="Du har: "/>
                                            <Label Text="{Binding NumIngredients}"></Label>
                                            <Label Text="av "></Label>
                                            <Label Text="{Binding NumInRecipe}"></Label>
                                            <Label Text=" ingredienser"></Label>
                                        </StackLayout>
                                    </StackLayout>

                                    <Grid BackgroundColor="#d3d3d3">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.7*"/>
                                            <ColumnDefinition Width="0.3*"/>
                                        </Grid.ColumnDefinitions>

                                    </Grid>


                                </StackLayout>

                            </ViewCell>

                        </DataTemplate>

                    </ListView.ItemTemplate>


                </ListView>

            </StackLayout>
            
        </ContentPage.Content>
    </ContentPage>

</TabbedPage>
